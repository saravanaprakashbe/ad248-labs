
<security-constraint> 
    <web-resource-collection> 
         <web-resource-name>All resources</web-resource-name> 
         <url-pattern>/*</url-pattern> 
    </web-resource-collection> 
    <auth-constraint> 
         <role-name>*</role-name> 
    </auth-constraint> 
</security-constraint> 
<security-role> 
    <role-name>*</role-name> 
</security-role>  
<login-config> 
    <auth-method>BASIC</auth-method> 
    <realm-name>bksecurity</realm-name> 
</login-config> 
